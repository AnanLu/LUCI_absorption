	number = {4},
	journaltitle = {Monthly Notices of the Royal Astronomical Society},
	shortjournal = {Mon. Not. R. Astron. Soc.},
	author = {Martin, Thomas B. and Prunet, Simon and Drissen, Laurent},
	urldate = {2020-02-24},
	date = {2016},
	langid = {english},
	file = {Martin et al. - 2016 - Optimal fitting of Gaussian-apodized or under-reso.pdf:/home/carterrhea/Zotero/storage/IBQ8PTCD/Martin et al. - 2016 - Optimal fitting of Gaussian-apodized or under-reso.pdf:application/pdf},
